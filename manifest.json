{
  "manifest_version": 2,

  "name": "Timed Tab Limiter",
  "description": "Time Limits your Tabs",
  "version": "0.0.1",

  "background": {
        "scripts": ["background.js"],
        "persistent": true
    },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs"
  ]
}