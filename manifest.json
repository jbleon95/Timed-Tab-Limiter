{
  "manifest_version": 2,

  "name": "Timed Tab Limiter",
  "description": "Time Limits your Tabs",
  "version": "0.5.0",
  "options_page": "options.html",

  "background": {
        "scripts": ["background.js"],
        "persistent": true
    },

  "icons": { 
    "48": "icon48.png",
    "128": "icon.png" 
    },  

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "permissions": [
    "tabs",
    "storage"
  ]
}